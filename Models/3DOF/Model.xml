<mujoco>
    <compiler angle="radian" meshdir="assets" autolimits="true"/>
    <option integrator="implicitfast" iterations="100"/>
    <default>
        <default class="simple">
            <joint damping="1"/>
            <general gaintype="fixed" biastype="affine"/>
        </default>
    </default>
    <worldbody>
        <body childclass="simple" name="base" pos="0 0 0">
            <body name="link1" pos="0 0 0">
                <joint name="joint1" type="hinge" axis="0 0 1" range="-3.14159 3.14159"/>
                <geom type="capsule" size="0.04 0.2" pos="0 0 0.2" rgba="0 1 0 1" contype="0" conaffinity="0" density="1"/>
                <body name="link2" pos="0 0 0.4">
                    <site name="site1" pos="0 0 0"/>
                    <joint name="joint2" type="hinge" axis="1 0 0" range="-3.14159 3.14159"/>
                    <geom type="capsule" size="0.04 0.2" pos="0 0 0.2" rgba="0 1 0 1" contype="0" conaffinity="0" density="1"/>
                    <body name="link3" pos="0 0 0.4">
                        <site name="site2" pos="0 0 0"/>
                        <joint name="joint3" type="hinge" axis="1 0 0" range="-3.14159 3.14159"/>
                        <geom type="capsule" size="0.04 0.2" pos="0 0 0.2" rgba="0 1 0 1" contype="0" conaffinity="0" density="1"/>
                        <body name="link4" pos="0 0 0.4">
                            <site name="site3" pos="0 0 0"/>
                        </body>
                    </body>
                </body>
            </body>
        </body>
    </worldbody>
    <actuator>
        <position joint="joint1" ctrllimited="true" ctrlrange="-3.14159 3.14159"/>
        <position joint="joint2" ctrllimited="true" ctrlrange="-3.14159 3.14159"/>
        <position joint="joint3" ctrllimited="true" ctrlrange="-3.14159 3.14159"/>
    </actuator>
</mujoco>
